    "version": "0.2.0",
    "configurations": [
        {
            "name": "启动内置服务器并debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:80",
                "-t",
                "."
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "在控制台中debug当前脚本",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "监听Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}